doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width,initial-scale=1')
    title Tastycat Emotes
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300', rel='stylesheet', type='text/css')
    style(type='text/css').
      #{css}
  body
    header.container.header
      h1 Tastycat Emotes
      #search-box
    hr
    #emotes.container
      each emote in emotes
        .emote-container
          h4.emote-header #{emote.name}
          .emote-image
            noscript
              img(src='#{emote.url}')
            img.b-lazy(src='loading.gif', data-src='#{emote.url}', alt="#{emote.name}")
    script(async, defer, src='emotes.js', onload='require("emotes").init()')